<div class="container" id="bigContainer">
    <div class="row">
        <div class="col">
            <img id="burgerImg" src='/assets/img/burger.png'>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    {{!-- Form Submission --}}
    <div class="row">
        <div class="col">
            <div id="enterBurger">
                <form id="burgerForm">
                    <textarea type="text" name="burgerName" rows="5" cols="40" wrap="hard"></textarea>
                    <br>
                    <button class="btn btn-primary" id="submitBtn">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>Enter a burger you want to eat, then click the 'Submit' button.</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="row">
            <div class="col">
                {{!-- <h2>{{burger_name}}</h2> --}}
                <input class="form-control" type="text" placeholder="{{burger_name}}">
            </div>
            <div class="col">
                <button class="devourBtn btn btn-light" data-id="{{id}}">Devour It!</button>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>
    <div class="col">
        {{#each burgers}}
        {{#if devoured}}
        {{!-- <h2>{{burger_name}}</h2> --}}
        <input class="form-control" type="text" placeholder="{{burger_name}}" readonly>
        {{/if}}
        {{/each}}
    </div>
</div>